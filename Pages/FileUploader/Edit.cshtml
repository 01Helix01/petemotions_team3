@page
@model PetEmotionsApp.Pages_FileUploader.EditModel

@{
    ViewData["Title"] = "Edit";
}
<style>
    body {
        background-color: #222831;
        color: white;
    }

    h1 {
        background-color: #222831;
        color: white;
    }

    h3 {
        background-color: #222831;
        color: white;
    }

    a:link {
        color: white;
        background-color: transparent;
        text-decoration: none;
    }

    a:visited {
        color: white;
        background-color: transparent;
        text-decoration: none;
    }
</style>

<h1>Edit</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FileUpload.Id" />
            <div class="form-group">
                <label asp-for="FileUpload.FileContent" class="control-label"></label>
                <input type = "hidden" asp-for="FileUpload.FileContent" class="form-control"/>
                <span asp-validation-for="FileUpload.FileContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpload.fileDate" class="control-label"></label>
                <input asp-for="FileUpload.fileDate" class="form-control" />
                <span asp-validation-for="FileUpload.fileDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpload.emotion" class="control-label"></label>
                <select asp-for="FileUpload.emotion" asp-items="Html.GetEnumSelectList<Models.Emotions>()"></select>
                <span asp-validation-for="FileUpload.emotion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpload.type" class="control-label"></label>
                <input asp-for="FileUpload.type" class="form-control" />
                <span asp-validation-for="FileUpload.type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FileUpload.name" class="control-label"></label>
                <input asp-for="FileUpload.name" class="form-control" />
                <span asp-validation-for="FileUpload.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
