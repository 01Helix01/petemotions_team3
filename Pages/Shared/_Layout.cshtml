<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PetEmotionsApp</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/2e6d32e2ce.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="~/PetEmotionsApp.styles.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Kumbh+Sans:wght@100..900&display=swap" rel="stylesheet">
</head>
<body>
    <nav class="navbar">
            <div class="navbar__container">
                <a href="/Index" id="navbar__logo"><i class="fa-solid fa-heart-circle-check icon"></i>PETVIBES</a>
                
                <div class="navbar__toggle" id="mobile-menu">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>

                </div>
                <ul class="navbar__menu">
                        
                        <li class="nav-item">
                            <a class="navbar__links" asp-area="" asp-page="/Login" style="text-decoration:none">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="navbar__links" asp-area="" asp-page="/FileUpload" style="text-decoration:none">File Upload</a>
                        </li>
                        <li class="nav-item">
                            <a class="navbar__links" asp-area="" asp-page="/History" style="text-decoration:none">History</a>
                        </li>
                    </ul>
                    
                
    
                    
                </div>
            </div>
        </nav>
    <header>
        
    </header>
   
    @RenderBody()      
     

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PetEmotionsApp - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>